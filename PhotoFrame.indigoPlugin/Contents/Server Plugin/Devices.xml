<?xml version="1.0"?>

<Devices>
	<Device type="custom" id="photoframe">
		<Name>Photo Frame</Name>
		<ConfigUI>
			<Field id="directory" type="textfield">
				<Label>Picture Directory</Label>
			</Field>
			<Field id="destination" type="textfield" default="/Library/Application Support/Perceptive Automation/Indigo 7/IndigoWebServer/photoalbum/album.jpg">
				<Label>Destination Directory</Label>
			</Field>
			<Field id="grouping" type="checkbox" >
				<Label>Group Photos</Label>
			</Field>
		</ConfigUI>
		
		<States>
			<State id="state">
				<ValueType>String</ValueType>
				<TriggerLabel>Photo Frame State</TriggerLabel>
				<ControlPageLabel>Photo Frame State</ControlPageLabel>
			</State>
			<State id="name">
				<ValueType>String</ValueType>
				<TriggerLabel>Photo Name</TriggerLabel>
				<ControlPageLabel>Photo Name</ControlPageLabel>
			</State>
			<State id="date">
				<ValueType>String</ValueType>
				<TriggerLabel>Photo Date</TriggerLabel>
				<ControlPageLabel>Photo Date</ControlPageLabel>
			</State>
		</States>
		<UiDisplayStateId>state</UiDisplayStateId>
		
	</Device>

</Devices>


